@page
@model Web.Pages.ExerciseAPICallModel
@{

}
<h1>Exercise List</h1>



<form method="post" enctype="multipart/form-data">
<div class="form-group" >
    <label>Select an exercise to add to your schedule</label>
    <br />
        <select asp-for="SelectedExerciseName" name="SelectedExerciseName">

        @foreach (var item in Model.Exercises)
        {
            <option value="@item.Name"> @item.Name</option>
        }
    </select>
        <span asp-validation-for="SelectedExerciseName" class="text-danger"></span>
</div>
<div class="form-group">
    <label>Select a workout to add to your schedule:</label>
    <br />
    <select asp-for="SelectedItemWorkout" name="SelectedItemWorkout">
    
        @foreach (var item in Model.WorkoutList)
        {
            <option value="@item.Title"> @item.Title</option>
        }
    </select>
    <span asp-validation-for="SelectedItemWorkout" class="text-danger"></span>

</div>
    <div class="form-group">
        <input asp-for="ExerciseToAdd.Sets" class="form-control" placeholder="Enter Sets" />
        </div>
    <div class="form-group">
        <input asp-for="ExerciseToAdd.Repetitions" class="form-control" placeholder="Enter Reps" />
    </div>
    <button type="submit" value="save" class="btn btn-primary">Create</button>
</form>
