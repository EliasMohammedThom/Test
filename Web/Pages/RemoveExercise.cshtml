@page
@using Core.Models
@model Web.Pages.RemoveExerciseModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "RemoveExercise";
    var user = await UserManager.GetUserAsync(User);
}

@foreach(var item in Model.AllWorkoutsByCurrentUser)
{
    <p>@item.Title</p>
    <p>@item.Date</p>
    <p>@item.Description</p>
    @foreach(var exercises in Model.AllExercisesByCurrentUser)
    {
        <p>@exercises.Name <button type="submit" class="btn btn-danger">Remove</button></p>
        
    }
    <p>@item.Id</p>
    <p>@item.UserId</p>
    <p>---------------------------</p>
}
