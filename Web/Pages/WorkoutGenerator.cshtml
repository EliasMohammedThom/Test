@page
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model Web.Pages.WorkoutGeneratorModel
@{
    var user = await UserManager.GetUserAsync(User);
}

<form method="post">

    <h3>Difficulty</h3>
    <select asp-for="@Model.Placeholder.DifficultyCategory">
        @foreach (var workoutDifficulty in Model.DifficultyCategory)
        {
            <option value="@workoutDifficulty">@workoutDifficulty</option>
        }
    </select>

    <h3>Equipment</h3>
    <select asp-for="@Model.Placeholder.WorkoutEquipment">
        @foreach (var equipment in Model.WorkoutEquipment)
        {
            <option value="@equipment">@equipment</option>
        }
    </select>

    <h3>Type</h3>
    <select asp-for="@Model.Placeholder.WorkoutType">
        @foreach (var type in Model.WorkoutType)
        {
            <option value="@type">@type</option>
        }
    </select>

    <h3>Muscle</h3>
    <select asp-for="@Model.Placeholder.MuscleCategories">
        @foreach (var muscle in Model.MuscleCategories)
        {
            <option value="@muscle">@muscle</option>
        }
    </select>

    <h3>Workouts per week</h3>
    <select asp-for="@Model.Placeholder.AmountOfWorkouts">
        @foreach (var amount in Model.AmountOfWorkouts)
        {
            <option value="@amount">@amount</option>
        }
    </select>

    <button type="submit">Generate</button>
</form>
